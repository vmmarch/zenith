// @vertex
layout(location = 0) in vec3 position;

out vec3 v_position;

uniform mat4 u_location;
uniform mat4 u_transform;

void main()
{
    v_position = position;
    gl_Position = u_location * u_transform * vec4(position, 1.0);
}
// @end

// @fragment
layout(location = 0) out vec4 color;

in vec3 v_position;

void main()
{
    color = vec4(v_position * 0.2 + 0.3, 1.0);
}
// @end
