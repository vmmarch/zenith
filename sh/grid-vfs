// @vertex
layout(location = 0) in vec3 position;

uniform mat4 u_view;
uniform mat4 u_projection;
uniform mat4 u_location;
uniform vec4 u_color;

out vec4 v_color;
out vec3 v_position;

void main()
{
    v_position = position;
    v_color = u_color;
    gl_Position = u_projection * u_view * u_location * vec4(position, 1.0);
}
// @end

// @fragment
layout(location = 0) out vec4 color;

in vec4 v_color;
in vec3 v_position;

void main()
{
    color = v_color;
}
// @end
