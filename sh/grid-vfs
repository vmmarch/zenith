// @vertex
layout(location = 0) in vec3 position;

uniform mat4 u_object_location;
uniform mat4 u_projection;
uniform mat4 u_view;

out vec3 v_position;

void main()
{
    v_position = position;
    gl_Position = u_projection * u_view * u_object_location * vec4(position, 1.0);
}
// @end

// @fragment
layout(location = 0) out vec4 color;

in vec3 v_position;

void main()
{
    color = vec4(v_position * 0.2 + 0.3, 1.0);
}
// @end
