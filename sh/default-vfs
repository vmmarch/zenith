// @vertex
layout(location = 0) in vec3 position;

out vec3 v_position;
out vec4 v_color;

uniform mat4 u_object_location;
uniform mat4 u_projection;
uniform mat4 u_view;
uniform vec4 u_color;

void main()
{
    v_position = position;
    v_color = u_color;
    gl_Position  = u_projection * u_view * u_object_location * vec4(position, 1.0f);
}
// @end

// @fragment
out vec4 color;
in vec4 v_color;

void main()
{
    color = v_color;
}
// @end